.t-users
  &__search
    display: flex
    align-items center
    font-weight: 400
    font-size: 14px
    margin-bottom: 30px
  &__field
    border 1px solid #000
    padding 0 10px
    height: 28px
    margin-left: 10px
  &__table
    margin 0 auto
    width: 100%
  td
  th
    border 1px solid #000
    padding: 5px
    font-size: 12px
  th
    cursor: pointer
    white-space nowrap
    &._down:after
      content: ''
      width: 6px
      height: 5px
      border-top 5px solid #000
      border-left 3px solid transparent
      border-right 3px solid transparent
      display: inline-block
      vertical-align: middle
      margin-left: 10px
    &._up:after
      content: ''
      width: 6px
      height: 5px
      border-bottom 5px solid #000
      border-left 3px solid transparent
      border-right 3px solid transparent
      display: inline-block
      vertical-align: middle
      margin-left: 10px
